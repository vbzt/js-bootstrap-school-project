<div class="container">
    <h1 class="text-center">Registrar Experimento</h1>
    <form action="experimento/create" method="post" class="form">
      
      <input type="hidden" name="id" value = 1>

      <div class="form-group">
        <label for="title">Título</label>
        <input type="text" class="form-control" name="title" placeholder="Digite o título" value="">
      </div> 

      <div class="form-group">
        <label for="description">Descrição</label>
        <textarea class="form-control" name="description" rows="4" placeholder="Digite a descrição"></textarea>
      </div> 

      <div class="form-group">
        <label for="area">Área</label>
        <input type="text" class="form-control" name="area" placeholder="Digite a área" value="">
      </div> 

      <div class="form-group">
        <label for="author">Autor</label>
        <input type="text" class="form-control" name="author" placeholder="Digite o autor" value="">
      </div> 

      <div class="form-group">
        <label for="date">Data</label>
        <input type="date" class="form-control" name="date" placeholder="Digite a data" value="">
      </div> 


      <h3 class="text-center">Variaveis</h3>

       <div class="variaveis">

        <div class="form-group">
          <label for="varName">Nome</label>
          <input type="text" class="form-control" name="varName" placeholder="Digite o nome da variavel" value="">
        </div>

        <div class="form-group">
          <label for="varDesc">Descrição</label>
          <textarea type="text" class="form-control" rows="1" name="varDesc" placeholder="Digite a dsecrião da variavel" value=""></textarea>
        </div>
        
        
  
      </div> 
      
      <div class="variaveis">

        <div class="form-group">
          <label for="varName2">Nome</label>
          <input type="text" class="form-control" name="varName2" placeholder="Digite o nome da variavel" value="">
        </div>

        <div class="form-group">
          <label for="varDesc2">Descrição</label>
          <textarea type="text" class="form-control" rows="1" name="varDesc2" placeholder="Digite a dsecrião da variavel" value=""></textarea>
        </div>
        
        
  
      </div>

      <button type="submit" class="btn w-100 btn-primary">Enviar</button>

    </form>
  </div>