<div class="container">
    <h1 class="text-center">Registrar Experimento</h1>
    <form action="post" class="form">

      <div class="form-group">
        <label for="title">Título</label>
        <input type="text" class="form-control" name="title" placeholder="Digite o título" value="">
      </div> 

      <div class="form-group">
        <label for="description">Descrição</label>
        <textarea class="form-control" name="description" rows="4" placeholder="Digite a descrição"></textarea>
      </div> 

      <div class="form-group">
        <label for="area">Área</label>
        <input type="text" class="form-control" name="area" placeholder="Digite a área" value="">
      </div> 

      <div class="form-group">
        <label for="author">Autor</label>
        <input type="text" class="form-control" name="author" placeholder="Digite o autor" value="">
      </div> 

      <div class="form-group">
        <label for="date">Data</label>
        <input type="text" class="form-control" name="date" placeholder="Digite a data" value="">
      </div> 

      <button type="submit" class="btn w-100 btn-primary">Enviar</button>

    </form>
  </div>